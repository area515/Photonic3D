#!/bin/sh
### BEGIN INIT INFO
# Provides:          CWH
# Required-Start: $all
# Required-Stop:
# Default-Start:        2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Starts the CWH
# Description: Starts the CWH
### END INIT INFO

case "$1" in
        start)
/opt/cwh/start.sh
;;
        stop)
/opt/cwh/stop.sh
;;
        restart)
/opt/cwh/stop.sh
/opt/cwh/start.sh
;;
*)
  echo "Usage: $0 {start|stop|restart}"
esac
exit 0
